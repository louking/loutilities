<!doctype html>
<html>
<head>
  <title>{{self.pagename()|striptags}}</title>
  <script type="text/javascript">
    var $SCRIPT_ROOT = {{ request.script_root|tojson|safe }};
  </script>

{% block prescripts %}
{% endblock %}

{# font for branding, see branding.css #}
<link href="https://fonts.googleapis.com/css?family=Kanit:800&display=swap" rel="stylesheet">
{# see assets.py for list of css, js files #}
{% if assets_css %}
  {% assets assets_css %}
    <link rel=stylesheet type=text/css href="{{ ASSET_URL }}">
  {% endassets %}
{# backwards compatibility #}
{% else %}
    {% assets "admin_css" %}
      <link rel=stylesheet type=text/css href="{{ ASSET_URL }}">
    {% endassets %}
{% endif %}
{# backwards compatibility #}
{% for css in pagecssfiles %}
  <link rel=stylesheet type=text/css href="{{ css }}">
{% endfor %}
<style>
  {% set urlparts = request.url.split('/') %}
  {% set hostname = urlparts[2] %}
  {% if hostname[0:9] == "127.0.0.1" or hostname[0:9] == "localhost" or hostname[0:13] == "dev.localhost" %}
    html {background: antiquewhite;}
  {% endif %}
  {% if hostname[0:8] == "sandbox." %}
    html {background: lightcyan;}
  {% endif %}
</style>
{% block css %}
{% endblock %}

<script>var _productname = "{{ _productname_text|safe }}";</script>
{% if assets_js %}
    {% assets assets_js %}
        <script type="text/javascript" src="{{ ASSET_URL }}"></script>
    {% endassets %}
{# backwards compatibility #}
{% else %}
    {% assets "admin_js" %}
        <script type="text/javascript" src="{{ ASSET_URL }}"></script>
    {% endassets %}
{% endif %}
{# backwards compatibility #}
{% for js in pagejsfiles %}
  <script type="text/javascript" src="{{ js }}"></script>
{% endfor %}

{% block signin %}
{% endblock %}

{% block scripts %}
{% endblock %}
</head>
<body>
{% if not printerfriendly %}
  <div class=heading>
    <h1>{{_productname|safe}}
    {% if hostname[0:9] == "127.0.0.1" or hostname[0:9] == "localhost" or hostname[0:13] == "dev.localhost" %} (development){% endif %}
    {% if hostname[0:8] == "sandbox." %} (sandbox){% endif %}
  </h1>
    <div class=pagename>{{self.pagename()}}</div>
    {# metanav for login buttons, etc #}
    {% block metanav %}
    {% endblock %}
  </div>
  <div class=wrapper>
    {# render navigation bar - see https://pythonhosted.org/flask-nav/index.html #}
    {% block nav %}
    {% endblock %}

    <div class=body>
      {% if error %}<p class=error><strong>Error: {{ error }}</strong></p>{% endif %}
      {% for message in get_flashed_messages() %}
        <div class=flash><p>{{ message }}</p></div>
      {% endfor %}
      <div id="widgets" style="{display: none}"></div>
      <div id="progressbar-container"></div>
      {% block body %}
      {% endblock %}
      {% if addfooter %}
        <div class="Footer">
          <div>
            <a href="{{url_for('terms') }}">Terms of Service</a>
            <a href="{{url_for('feedback')}}?next={{request.url}}">Questions/Feedback</a>
          </div>
          <span>&copy; 2018 loutilities (Lou King).   All rights reserved.</span>
        </div>
      {% endif %}
    </div>
  </div>
{% else %}
  <div class=body-printerfriendly>
    {{ self.body() }}
  </div>
{% endif %}

</body>
</html>